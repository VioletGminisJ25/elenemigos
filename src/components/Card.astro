---
import type { Card } from '../types/types';

interface Props extends Card {}

const {image,name,alt,frase,sinopsis,puntosPos,puntosNeg,valoraApart,valoraFinal} = Astro.props;
---
<li class=`tablet:w-52 desktop:w-[300px] desktop:min-h-[300px] tablet:min-h-56 bg-red-800 rounded-md hover:opacity-50 transition-all duration-300 bg-ghosttushima` >
    <div class="w-full h-2/3 bg-cover bg-center rounded-md card" style=`background-image: url(${image});`></div>
    <h3 class="h-1/3 flex items-center justify-center text-xl">{name}</h3>
</li>
